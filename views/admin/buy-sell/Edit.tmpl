{{define "Edit"}}
  {{ template "Header" }}

  <h2 class="col">Edit buy-sell</h2>

  <form method="POST" action="update">
    <div class="form-group">
      <label for="exampleInputEmail1">SellerId</label>
      <input type="text" class="form-control" name="SellerId" id="SellerId" value="{{ .SellerId }}">
    </div>

    <div class="form-group">
      <label for="exampleInputPassword1">BuyerId</label>
      <input type="text" class="form-control" name="BuyerId" id="BuyerId" value="{{ .BuyerId }}">
    </div>

    <div class="form-group">
      <label for="exampleInputPassword1">Stype</label>
      <input type="text" class="form-control" name="Stype" id="Stype" value="{{ .Stype }}">
    </div>

    <div class="form-group">
      <label for="exampleInputPassword1">ISBN</label>
      <input type="text" class="form-control" name="ISBN" id="ISBN" value="{{ .ISBN }}">
    </div>

    <div class="form-group">
      <label for="exampleInputPassword1">Tid</label>
      <input type="text" class="form-control" name="Tid" id="Tid" value="{{ .Tid }}">
    </div>


    <button type="submit" class="btn btn-primary">Save Buy</button>
  </form>

  {{ template "Footer" }}
{{end}}